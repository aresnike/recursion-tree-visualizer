{
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "target": "es2018",
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "types": ["node", "jest"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true
  }
}
